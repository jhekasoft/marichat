{{ form(form) }}
{% image '@MarichatChatBundle/Resources/public/images/ajax-loader.gif' %}
    <img class="add-loading" src="{{ asset_url }}" alt="Loading..." />
{% endimage %}
<script type="text/javascript">
    $(document).ready(function() {
        $('#chat_message').focus();
        $('form[name="chat"]').submit(function() {
            Chat.add();
            return false;
        });
        $('form[name="chat"]').keydown(function () {
            Chat.notifyTyping('{{ app.user ? app.user.username : 'Anonymous' }}');
        });
    });
</script>
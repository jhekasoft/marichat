{% for message in messages %}
    <tr class="chat-row">
        <td class="chat-row-time">
            <div><strong>{{ message.username }}</strong></div>
            <div title="{{ message.time|date('Y-m-d H:i:s') }}">{{ message.time|date('H:i:s') }}</div>
        </td>
        <td>
            {{ message.text }}
        </td>
    </tr>
{% endfor %}

    <tr>
        <td colspan="2">
            <div class="messages-refresh-block">
                <a href="javascript: void(0);" onclick="Chat.refreshListGui();" class="btn-messages-refresh btn btn-default"><span class="glyphicon glyphicon-refresh"></span></a>
                {% image '@MarichatChatBundle/Resources/public/images/ajax-loader.gif' %}
                    <img class="messages-loading" src="{{ asset_url }}" alt="Loading..." />
                {% endimage %}
            </div>
        </td>
    </tr>
